<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.item.status.picker.PickerActivity">

    <Button
        android:id="@+id/btn_pick_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间选择器" />

    <Button
        android:id="@+id/btn_pick_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义时间选择器" />

    <Button
        android:id="@+id/btn_pick_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="条件选择器" />

    <Button
        android:id="@+id/btn_pick_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义条件选择器" />

    <Button
        android:id="@+id/btn_pick_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义三级条件选择器" />
</LinearLayout>
